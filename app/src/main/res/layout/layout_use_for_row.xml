<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_medium"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_use_for"
            android:layout_width="@dimen/use_for_width"
            android:layout_height="@dimen/use_for_width"
            android:src="@drawable/if_river_494761" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/use_for_width"
            android:layout_toRightOf="@+id/img_use_for"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin_half">

            <TextView
                android:id="@+id/txt_use_for"
                style="@style/NormalSmallTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdfasfsadfasfasdfsd"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_use_desc_1"
                style="@style/NormalSmallTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdfasfsadfasfasdfsd"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_use_desc_2"
                style="@style/NormalSmallTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdfasfsadfasfasdfsd"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>